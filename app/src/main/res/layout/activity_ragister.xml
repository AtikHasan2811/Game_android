<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".RagisterActivity">

    <ImageView
        android:id="@+id/id_reg_icon"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/id_reg_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_reg_icon"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/input"
        android:drawableLeft="@drawable/email"
        android:ems="10"
        android:hint="Email...."
        android:inputType="textEmailAddress"
        android:padding="8dp" />


    <EditText
        android:id="@+id/id_reg_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_reg_email"
        android:layout_alignParentTop="true"
        android:layout_marginTop="199dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/input"
        android:drawableLeft="@drawable/password"
        android:ems="10"
        android:hint="Password..."
        android:inputType="textPassword"
        android:padding="8dp" />

    <EditText
        android:id="@+id/id_reg_conf_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_reg_pass"
        android:layout_alignParentTop="true"
        android:layout_marginTop="289dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/input"
        android:drawableLeft="@drawable/password"
        android:ems="10"
        android:hint="Confram Password..."
        android:inputType="textPassword"
        android:padding="8dp" />


    <Button
        android:id="@+id/id_reg_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_reg_conf_pass"
        android:layout_marginStart="0dp"
        android:layout_marginTop="28dp"
        android:onClick="button"
        android:background="@drawable/button"
        android:padding="8dp"
        android:text="Regeation"
        android:textColor="@android:color/background_light"
        android:textSize="20dp"
        android:textStyle="bold" />




</RelativeLayout>
