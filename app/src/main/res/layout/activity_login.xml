<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".loginActivity">


    <ImageView
        android:id="@+id/id_login_icon"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/id_logIn_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_login_icon"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/input"
        android:drawableLeft="@drawable/email"
        android:ems="10"
        android:hint="Email...."
        android:inputType="textEmailAddress"
        android:padding="8dp" />


    <EditText
        android:id="@+id/id_logIn_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_logIn_email"
        android:layout_alignParentTop="true"
        android:layout_marginTop="199dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/input"
        android:drawableLeft="@drawable/password"
        android:ems="10"
        android:hint="Password..."
        android:inputType="textPassword"
        android:padding="8dp" />


    <Button
        android:id="@+id/id_logIn_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_logIn_pass"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:padding="8dp"
        android:onClick="loginButton"
        android:text="LogIn"
        android:textColor="@android:color/background_light"
        android:textSize="20dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/id_need_new_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_logIn_create_account"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:onClick="gotoRegister"
        android:text="Don'n have Account,Need New Account"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_facebook_siginIn"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/id_twiter_gininIn"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:src="@drawable/twitter" />

        <ImageView
            android:id="@+id/id_google_giginIn"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:src="@drawable/google" />

    </LinearLayout>




</RelativeLayout>
